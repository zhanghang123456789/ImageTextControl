<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_image_text_control_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    tools:context=".widget.ImageTextControl">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_tv_img_txt_left_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左边文字"
        android:textColor="@color/black3"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/custom_tv_img_txt_top_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上边文字"
            android:textColor="@color/black3"
            android:textSize="18sp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/custom_iv_img_txt_left_core"
            android:layout_width="58dp"
            android:layout_height="58dp"
            app:srcCompat="@mipmap/ic_launcher" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/custom_tv_img_txt_bottom_char"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="下边文字"
            android:textColor="@color/black3"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/custom_tv_img_txt_right_char"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="右边文字"
        android:layout_marginStart="12dp"
        android:textColor="@color/black3"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>
